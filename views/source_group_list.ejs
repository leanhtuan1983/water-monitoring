        <div class="row" style="align-items: center;">
            <div class="col-lg-2 col-md-2 col-sm-2"></div>
            <div class="col-lg-2 col-md-3 col-sm-3 col-3">
                <label for="total_group_name" class="total_e">
                    <%= __('Total group')%> :
                </label>
            </div>
            <div class="col-lg-2 col-md-4 col-sm-4 col-7 mt-1">
                <div>
                    <input type="text" class="form-control" id="total_group_name_1"
