                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-xl-1 col-md-1"></div>
                            <div class="col-xl-7 col-lg-6 col-md-4"></div>
                            <div class="col-xl-2 col-lg-3 col-md-5 mt-1">
                                <button type="button" class="btn btn-primary" onclick="Add_group()">
                                    <%= __('Add')%>
                                </button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">
                                    <%= __('Cancel')%>
                                </button>
                            </div>
                            <div class="col-xl-2 col-lg-3 col-md-3"></div>
                        </div>




                    </div>
                </div>

            </div>
        </div>
    </div>

    <div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"
            style="float: left;font-weight: bold;">+ <%= __('Add group')%>
